@using Restaurant.Web.HelperClasses
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L
@inject ISharedViewLocalizer SL

@{
    this.ViewData["Title"] = SL["ABOUT_US"];
}

<partial name="_HeroPartial" />

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.1s" src="~/images/about-1.jpg" asp-append-version="true">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.3s" src="~/images/about-2.jpg" style="margin-top: 25%;" asp-append-version="true">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.5s" src="~/images/about-3.jpg" asp-append-version="true">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.7s" src="~/images/about-4.jpg" asp-append-version="true">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <h1 class="mb-4">@L["WELCOME_TO"] <i class="fa fa-utensils text-primary me-2"></i>@SL["GOURMET_EXPERIENCE"]</h1>
                <p class="mb-4">@L["ABOUT_OUR_MISSION"]</p>
                <p class="mb-4">@L["ABOUT_OUR_POLICY_FIRST"] @L["ABOUT_OUR_POLICY_SECOND"]</p>
                <div class="row g-4 mb-4">
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center border-start border-5 border-primary px-3">
                            <h1 class="flex-shrink-0 display-5 text-primary mb-0" data-toggle="counter-up">15</h1>
                            <div class="ps-4">
                                <p class="mb-0">@L["YEARS_OF"]</p>
                                <h6 class="text-uppercase mb-0">@L["EXCELLENCE"]</h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center border-start border-5 border-primary px-3">
                            <h1 class="flex-shrink-0 display-5 text-primary mb-0" data-toggle="counter-up">32</h1>
                            <div class="ps-4">
                                <p class="mb-0">@L["INCREDIBLE"]</p>
                                <h6 class="text-uppercase mb-0">@L["DISHES"]</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Team Start -->
<div class="container-xxl pt-5 pb-3">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">@L["TEAM_MEMBERS"]</h5>
            <h1 class="mb-5">@L["MASTER_CHEFS"]</h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="team-item text-center rounded overflow-hidden">
                    <div class="rounded-circle overflow-hidden m-4">
                        <img class="img-fluid" src="~/images/team-1.jpg" asp-append-version="true" />
                    </div>
                    <h5 class="mb-0">Joël Robuchon</h5>
                    <small>Chef de Cuisine</small>
                <partial name="_SocialIconsPartial" />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="team-item text-center rounded overflow-hidden">
                    <div class="rounded-circle overflow-hidden m-4">
                        <img class="img-fluid" src="~/images/team-2.jpg" asp-append-version="true">
                    </div>
                    <h5 class="mb-0">Marco Pier White</h5>
                    <small>Executive Chef</small>
                    <partial name="_SocialIconsPartial" />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="team-item text-center rounded overflow-hidden">
                    <div class="rounded-circle overflow-hidden m-4">
                        <img class="img-fluid" src="~/images/team-3.jpg" asp-append-version="true">
                    </div>
                    <h5 class="mb-0">Gordon Ramsay</h5>
                    <small>Sous Chef</small>
                    <partial name="_SocialIconsPartial" />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="team-item text-center rounded overflow-hidden">
                    <div class="rounded-circle overflow-hidden m-4">
                        <img class="img-fluid" src="~/images/team-4.jpg" asp-append-version="true">
                    </div>
                    <h5 class="mb-0">Wolfgang Puck</h5>
                    <small>Chef de Partie</small>
                    <partial name="_SocialIconsPartial" />
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Team End -->
