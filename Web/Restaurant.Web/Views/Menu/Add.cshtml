@using Restaurant.Web.ViewModels.InputModels
@model AddMealInputModel
@{
    this.ViewData["Title"] = "Add a new meal";
    var categoryItems = this.Model.CategoryItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="container-xxl py-1 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h6 class="display-3 section-title text-white mb-3 animated slideInDown">Add a new meal</h6>
    </div>
</div>

<div class="wow fadeInUp" data-wow-delay="0.2s">

        <form method="post" class="col-md-6 offset-md-3"
              enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <h1></h1>
            <div class="col-12">
                <button class="btn btn-primary w-100 py-3 p-5" type="submit">Book Now</button>
            </div>
        </form>
</div>
