@using Restaurant.Common
@using Restaurant.Web.ViewModels.InputModels
@model AddReviewInputModel

@{
    this.ViewData["Title"] = "Add review";
}

<div class="container-xxl py-3 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">

    </div>
</div>
<div class="col-md-12 bg-dark">
    <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
        <h1 class="text-white mb-4 text-center">Tell us about your experience!</h1>
        <h5 class="text-center text-white fw-normal">Rate us!</h5>
        <span class="form-check text-center" asp-validation-for="Rating"></span>

        <form method="post">
            <div class="rated">
                <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label>
                <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label>
                <input type="radio" name="rating" value="3" id="3"><label for="3">☆</label>
                <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label>
                <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label>
            </div>
            <div class="form-floating">
                <textarea class="form-control col-xl-12" asp-for="Description" placeholder="Let us know what you think!" style="height: 200px"></textarea>
                <label asp-for="Description">Let us know what you think!</label>
                <span asp-validation-for="Description" class="text-white"></span>
            </div>
            <h1></h1>
            <button class="btn btn-primary w-100 py-3 form-lg" type="submit">Submit</button>
        </form>
    </div>
</div>

