@using Restaurant.Web.ViewModels.Address
@model AddressViewModel
@{
    this.ViewData["Title"] = SL["ADD_NEW_ADDRESS"];
}

<partial name="_HeroPartial" />
<div class="row justify-content-center px-5 pb-3">

    <div class="col-md-8 wow fadeInUp" data-wow-delay="0.1s">
        <hr style="color: black; height:3px; opacity:100" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form class="row g-3 mb-3" method="post">
            <partial name="_AddressViewPartial" model="Model" />
            <button type="submit" id="editAddressButton" class="btn btn-primary col-xl-3 ms-2 me-5"><i class="fa-solid fa-check"></i> @SL["SAVE"]</button>
            <a class="btn btn-primary ms-2 col-xl-3" asp-controller="Address" asp-action="All"><i class="fa-solid fa-circle-left"></i> @SL["BACK"]</a>
        </form>

        <hr style="color: black; height:3px; opacity:100" />
    </div>
</div>

