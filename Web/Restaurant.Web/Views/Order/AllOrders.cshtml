@using Restaurant.Web.ViewModels.Order;
@model AllOrdersViewModel;
@{
    this.ViewData["Title"] = SL["YOUR_ORDERS"];
}

<partial name="_HeroPartial" />

<div class="row justify-content-center wow fadeInUp" data-wow-delay="0.1s">
    <div class="col-xl-3 text-center p-5">
        <hr style="color: black; height:3px; opacity:100; margin-bottom:30px;" />
        <h3>@SL["YOUR_ORDERS"]</h3>
        <ul class="nav nav-pills justify-content-center" id="addressNames">
            @if (Model is not null)
            {
                @foreach (var orderNumber in Model.OrdersByUser)
                {
                    <li class="nav-item text-center"><a class="nav-link text-black @if (Model.Order.OrderNumber == orderNumber) { <text>active</text> }" asp-area="" asp-controller="Order" asp-action="All" asp-route-id="@orderNumber">@SL["ORDER_NUMBER"] @orderNumber</a></li>
                }
            }
        </ul>
        <hr style="color: black; height:3px; opacity:100" />
    </div>
    <div class="col-xl-6 p-5">
        @if (Model is null)
        {
            <h1>@SL["NO_ORDERS_YET"]</h1>
        }
        else
        {
            <div class="border border-5 border-dark">
                <table align="center" class="table table-borderless mb-0">
                    <partial name="_OrderPartial" model="Model.Order" />
                </table>
            </div>
        }
    </div>
</div>

