@using Restaurant.Web.ViewModels.Meal;
@model AdminMealViewModel

@{
    ViewData["Title"] = "Details";
}

<partial name="_HeroPartial" />

<div>
    <div>
        <h4>Meal id: @Model.Id</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Meal image
            </dt>
            <dd class="col-sm-10">
                <img class="flex-shrink-0 img-fluid" src=@Model.ImageUrl asp-append-version="true">
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Name"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Price"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Price
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Description"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Category.Name"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Category.Name
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.IsDeleted"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.IsDeleted
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.IsDeleted"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.IsDeleted
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.DeletedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.DeletedOn
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.CreatedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedOn
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.ModifiedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.ModifiedOn
            </dd>
        </dl>
    </div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"> <i class="fa-solid fa-pen-to-square"></i> Edit</a> |
    <a class="btn btn-primary" asp-action="Index" asp-route-id="@(this.TempData["RouteId"] ?? 1)"> <i class="fa-solid fa-bars"></i> Back to List</a>
</div>
