@using Restaurant.Web.ViewModels.Meal
@model AdminMealListViewModel

@{
    ViewData["Title"] = "Index";
}

<partial name="_HeroPartial" />
<table class="table table-hover table-bordered table-responsive">
    <thead class="table-dark">
        <tr class="text-center">
            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th >
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                IsDelete
            </th>
            <th>
                DeletedOn
            </th>
            <th>
                CreatedOn
            </th>
            <th>
                ModifiedOn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-light">
        @foreach (var meal in Model.Meals)
        {
            <tr>
                <td>
                    <img class="flex-shrink-0 img-fluid" src=@meal.ImageUrl alt="" asp-append-version="true">
                </td>
                <td>
                    @meal.Name
                </td>
                <td>
                    @meal.Description
                </td>
                <td>
                    @meal.Price
                </td>
                <td>
                    @meal.Category.Name
                </td>
                <td>
                    @meal.IsDeleted
                </td>
                <td>
                    @meal.DeletedOn
                </td>
                <td>
                    @meal.CreatedOn
                </td>
                <td>
                    @meal.ModifiedOn
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@meal.Id">Edit</a> 
                </td>
            </tr>
        }
    </tbody>

</table>
<a class="btn btn-primary" asp-action="Create">Create New</a>

<partial name="_PagingPartial" model="@Model" />

