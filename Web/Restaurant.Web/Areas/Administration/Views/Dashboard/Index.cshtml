@{
    this.ViewData["Title"] = "Dashboard";
}

<partial name="_HeroPartial" />

<div class="container-xxl py-5">
    <div class="container text-center">
        <div class="row g-4">
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item rounded pt-3">
                    <div class="p-4">
                        <p>Manage meals</p>
                        <a class="btn btn-dark" asp-area="Administration" asp-controller="Meal" asp-action="All" asp-route-id="1">Meals</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item rounded pt-3">
                    <div class="p-4">
                        <p>Manage orders</p>
                        <a class="btn btn-dark" asp-area="Administration" asp-controller="Order" asp-action="All" asp-route-id="1">Orders</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item rounded pt-3">
                    <div class="p-4">
                        <p>Manage reservations</p>
                        <a class="btn btn-dark" asp-area="Administration" asp-controller="Reservation" asp-action="All" asp-route-id="1">Reservations</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="service-item rounded pt-3">
                    <div class="p-4">
                        <p>Manage reviews</p>
                        <a class="btn btn-dark" asp-area="Administration" asp-controller="Review" asp-action="All" asp-route-id="1">Reviews</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>