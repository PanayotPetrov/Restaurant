@using Restaurant.Web.ViewModels.Order;
@model AdminOrderViewModel;

@{
    ViewData["Title"] = "Details";
}

<partial name="_HeroPartial" />

<div>
    <div asp-validation-summary="All"></div>
    <div>
        <h4>Order number № @Model.OrderNumber</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="@Model.ApplicationUserId"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.ApplicationUserId
            </dd>
            <dt class="col-sm-2">
                <label>Items ordered</label>
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var meal in Model.Meals)
                    {
                        <li>
                            @meal.MealName x @meal.MealQuantity
                        </li>
                    }
                </ul>
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.TotalPrice"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.TotalPrice
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.IsComplete"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.IsComplete
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.DeliveryTime"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.DeliveryTime.ToLocalTime()
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.CompletedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.CompletedOn
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.IsDeleted"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.IsDeleted
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.DeletedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.DeletedOn
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.CreatedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedOn
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.ModifiedOn"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.ModifiedOn
            </dd>
        </dl>
    </div>
    <form asp-action="Delete" asp-route-id="@Model.Id" id="deleteForm">
        <input type="hidden" asp-for="Id" />
    </form>
    <form asp-action="Restore" asp-route-id="@Model.Id" id="restoreForm">
        <input type="hidden" asp-for="Id" />
    </form>
    <form asp-action="Complete" asp-route-id="@Model.Id" id="completeForm">
        <input type="hidden" asp-for="Id" />
    </form>
    <button value="Delete" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="fa-solid fa-trash-can"></i> Delete</button> |

    <a class="btn btn-primary" asp-action="Index" asp-route-id="@(this.TempData["RouteId"] ?? 1)"><i class="fa-solid fa-bars"></i> Back to List</a> |

    <button class="btn btn-primary" asp-action="Restore" asp-route-id="@Model.Id" onclick="restoreForm.submit()"><i class="fa-solid fa-trash-arrow-up"></i> Restore</button> |

    <button class="btn btn-primary" asp-action="Complete" asp-route-id="@Model.Id" onclick="completeForm.submit()"><i class="fa-solid fa-check"></i> Mark as completed</button>


</div>

<!-- Modal -->
<partial name="_ModalPartial" />

